{
  "name": "nordrassil",
  "description": "Nordrassil, the Word Trie - a trie data structure implemented in vanilla JavaScript",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git@github.com:mgarbacz/nordrassil.git"
  },
  "scripts": {
    "dev": "./node_modules/.bin/vite app",
    "build": "./node_modules/.bin/vite build --outDir ./../dist --emptyOutDir app",
    "watch": "./node_modules/.bin/vite build --outDir ./../dist --emptyOutDir --watch app",
    "serve": "./node_modules/.bin/vite preview --outDir ./../dist --emptyOutDir app",
    "test": "./node_modules/.bin/mocha",
    "coverage": "./node_modules/.bin/c8 ./node_modules/.bin/mocha"
  },
  "devDependencies": {
    "c8": "^8.0.1",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "vite": "^4.5.0"
  }
}
